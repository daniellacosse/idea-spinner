{
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "vue": "^3.2.33"
  },
  "devDependencies": {
    "@parcel/transformer-vue": "2.6.0",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@typescript-eslint/utils": "^5.22.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsdoc": "^39.3.0",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4"
  },
  "name": "idea-spinner-workspace",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "build": "yarn workspaces foreach -piv run build",
    "docs": "typedoc  --name 'Idea Spinner' --githubPages false --entryPointStrategy packages .",
    "lint": "yarn workspaces foreach -piv run lint",
    "test": "yarn workspaces foreach -piv run test",
    "watch": "yarn workspaces foreach -piv run watch"
  },
  "husky": {
    "pre-commit": "yarn docs && git add docs",
    "prepare-commit-msg": "exec < /dev/tty && yarn cz --hook || true"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
